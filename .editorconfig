# docs: https://editorconfig.org
# config by @frytg - the primary file lives at https://github.com/frytg/dotfiles

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
print_width = 120
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
quote_type = single

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2
